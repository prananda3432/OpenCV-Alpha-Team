<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_ListNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:elevation="20dp"
    android:background="@color/ColorWhite"
    app:layout_constraintCircleRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_Thambnail"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/frame_ListNews"
        android:src="@drawable/photo_berita"/>

    <LinearLayout
        android:id="@id/frame_ListNews"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txt_TimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 jam yang lalu"
        android:textColor="@color/ColorBlack"
        android:textSize="10sp"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_NameSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Dr. Sienny Agustin - 22 Maret 2021"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_TitleNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="3dp"
                android:text="angan Biarkan Berlarut-Larut, Inilah 6 Cara Mudah Mengatasi Stres"
                android:textColor="@color/TextColorprimary"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_DateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="April 18, 2021"
            android:textSize="10sp" />

    </LinearLayout>

   </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="6dp"
        android:background="@color/TextColorprimary" />


</FrameLayout>