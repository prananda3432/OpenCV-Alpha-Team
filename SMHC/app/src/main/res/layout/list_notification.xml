<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemWrapper"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/ColorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="80dp"
        android:padding="6dp">

        <TextView
            android:id="@+id/txt_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Peringatan!"
            android:textColor="@color/ColorBlack"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_warning"
            android:text="Jl. Tukad Badung, Renon, \n Denpasar Selatan, Kota Denpasar"
            android:textSize="14dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/txt_statuskorban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_lokasi"
            android:text="Butuh pencegatan"
            android:textSize="14dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/txt_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_statuskorban"
            android:text="30 Detik yang lalu"
            android:textSize="10dp"
            android:textColor="#615A5A"
            android:textStyle="normal"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center"
        android:background="#F43636"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_warning_24"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>